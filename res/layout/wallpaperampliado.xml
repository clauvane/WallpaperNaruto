<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/w1"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/action_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:background="@drawable/fundo_actionbar"
	    android:gravity="center|left"
	    android:orientation="horizontal"
	    android:paddingTop="5dp" >

		<LinearLayout android:layout_width="wrap_content"
			android:paddingLeft="5dp" android:id="@+id/LinearLayout04"
			android:gravity="center" android:layout_height="fill_parent">

			<Button
			    android:id="@+id/actionbar_home"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/actionbar_voltar_xml" />
			<TextView android:shadowRadius="3.0" android:id="@+id/titulo"
				android:shadowColor="#555555" android:layout_height="wrap_content"
				android:shadowDx="1.0" android:shadowDy="1.0" android:textColor="#FFFFFF"
				android:text="Wallpapers" android:paddingLeft="5dp" android:layout_width="wrap_content" android:textSize="22dp"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:paddingRight="5dp" android:layout_gravity="right"
			android:id="@+id/LinearLayout02" android:gravity="right"
			android:layout_height="fill_parent">
			<LinearLayout android:gravity="center" android:paddingRight="15dp" android:paddingLeft="10dp" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="fill_parent" android:id="@+id/LinearLayout05">
				<Button android:id="@+id/share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_bar_share_xml"></Button>
			</LinearLayout>
			<LinearLayout android:gravity="center" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="fill_parent" android:id="@+id/LinearLayout03">

				<Button
				    android:id="@+id/set"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@drawable/button_bar_setwallpaper_xml" >
</Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/scrollView1">
		<LinearLayout android:id="@+id/linearLayout7"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">

			<LinearLayout
			    android:id="@+id/linearLayout2"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:gravity="center"
			    android:orientation="vertical" >

				<ImageView
				    android:id="@+id/logo"
				    android:layout_width="wrap_content"
				    android:layout_height="250dp"
				    android:src="@drawable/w7" >
</ImageView>
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="horizontal" android:layout_height="wrap_content"
					android:id="@+id/linearLayout3" android:gravity="center">
					<LinearLayout android:layout_width="wrap_content"
						android:orientation="vertical" android:layout_height="fill_parent"
						android:id="@+id/linearLayout6">
						<Button android:layout_width="wrap_content"
							android:background="@drawable/previous_button"
							android:layout_height="wrap_content" android:id="@+id/anterior"></Button>
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="fill_parent" android:id="@+id/LinearLayout01"
						android:gravity="center" android:layout_width="100dp">
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:orientation="vertical" android:layout_height="fill_parent"
						android:id="@+id/linearLayout4" android:gravity="right">
						<Button android:layout_width="wrap_content"
							android:background="@drawable/next_button" android:layout_height="wrap_content"
							android:id="@+id/next"></Button>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
