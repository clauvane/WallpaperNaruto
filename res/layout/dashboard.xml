<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/w1"
    android:orientation="vertical" >

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:orientation="vertical" android:gravity="center"
		android:paddingTop="5dp">
		<ImageView android:src="@drawable/naruto_logo"
			android:layout_width="wrap_content" android:id="@+id/imageView1"
			android:layout_height="wrap_content"></ImageView>
	</LinearLayout>
	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
		<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/linearLayout3">
		
			<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">				
					<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
  <com.google.ads.AdView android:id="@+id/adView"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="a150bd5c5f93e7f"
                         ads:adSize="BANNER"
                         ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
                         ads:loadAdOnCreate="true"
                         android:gravity="center"/>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:paddingTop="10dp" android:layout_height="120dp" android:layout_weight="1" android:paddingBottom="10dp" android:orientation="horizontal">

					<Button
					    android:id="@+id/home_btn_wallpaper"
					    style="@style/HomeButton"
					    android:layout_width="fill_parent"
	    				android:layout_height="fill_parent"
					    android:drawableTop="@drawable/icone1"
					    android:text="Wallpapers" >
					</Button>

					<Button
					    android:id="@+id/home_btn_support"
					    style="@style/HomeButton"
					    android:drawableTop="@drawable/icone2"
					    android:text="Support" />

				</LinearLayout>

				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="120dp"
				    android:layout_weight="1"
				    android:orientation="horizontal" >

					<Button
					    android:id="@+id/home_btn_puzzle"
					    style="@style/HomeButton"
					    android:drawableTop="@drawable/icone3"
					    android:text="Puzzle" />
					<Button
					    android:id="@+id/home_btn_get"
					    style="@style/HomeButton"
					    android:drawableTop="@drawable/icone4"
					    android:text="Rate" />

				</LinearLayout>

				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="120dp"
				    android:layout_weight="1"
				    android:orientation="horizontal" >
					
				    <Button
					    android:id="@+id/home_btn_quiz"
					    style="@style/HomeButton"
					    android:drawableTop="@drawable/icone5"
					    android:text="Quiz" />
				    
				    <Button
					    android:id="@+id/home_btn_invisivel"
					    style="@style/HomeButton"
					    android:text="" />

				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	
</LinearLayout>